{
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "skipLibCheck": true,
    "paths": {
      "$lib": ["../src/lib"],
      "$lib/*": ["../src/lib/*"]
    },
    "rootDirs": ["..", "./types"],
    "isolatedModules": true,
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "noEmit": true,
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "src/**/*",
    "ambient.d.ts",
    "./types/**/$types.d.ts",
    "../vite.config.js",
    "../vite.config.ts",
    "../src/**/*.js",
    "../src/**/*.ts",
    "../src/**/*.svelte",
    "../tests/**/*.js",
    "../tests/**/*.ts",
    "../tests/**/*.svelte"
  ],
  "exclude": [
    "node_modules",
    "../node_modules/**",
    "./[!ambient.d.ts]**",
    "../src/service-worker.js",
    "../src/service-worker.ts",
    "../src/service-worker.d.ts"
  ]
}
